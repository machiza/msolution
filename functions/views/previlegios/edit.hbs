<section class="vbox">
  <section class="scrollable padder">
    <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
      <li><a href="/admin"><i class="fa fa-home"></i> Home</a></li>
      <li><a href="#">Definições</a></li>
      <li><a href="/previlegios">Niveis de Acessos</a></li>
      <li><a class="active">Actualizar</a></li>
    </ul>

    <section class="panel panel-default">
      <header class="panel-heading font-bold">
        Formulario
      </header>
      <div class="panel-body">
        <form class="form-horizontal" id="frm-update">
          <input type="hidden" id="docId" value="{{ id }}">
          <div class="form-group">
            <label class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-8">
              <input type="text" id="nome" value="{{ previlegio.nome }}" class="form-control" placeholder="Digite o nome do nivel de acesso">
            </div>
          </div>
          <div class="line line-dashed line-lg pull-in"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Previlegios</label>
            <div class="col-sm-10">
              <div class="row">
                <div class="col-sm-4">
                  <div class="checkbox">
                    <label class="checkbox-custom">
                      <input type="checkbox" id="definicoes">
                      <i class="fa fa-fw fa-square-o"></i>
                      Definições
                    </label>
                  </div>
                  <div class="checkbox">
                    <label class="checkbox-custom">
                      <input type="checkbox" id="rh">
                      <i class="fa fa-fw fa-square-o"></i>
                      Recursos Humanos
                    </label>
                  </div>
                  
                </div>
                <div class="col-sm-4">
                  <div class="checkbox">
                    <label class="checkbox-custom">
                      <input type="checkbox" id="tarefas">
                      <i class="fa fa-fw fa-square-o"></i>
                      Tarefas
                    </label>
                  </div>
                  <div class="checkbox">
                    <label class="checkbox-custom">
                      <input type="checkbox" id="financas">
                      <i class="fa fa-fw fa-square-o"></i>
                      Finanças
                    </label>
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="checkbox">
                    <label class="checkbox-custom">
                      <input type="checkbox" id="marketing">
                      <i class="fa fa-fw fa-square-o"></i>
                      Marketing
                    </label>
                  </div>
                  <div class="checkbox">
                    <label class="checkbox-custom">
                      <input type="checkbox" id="relatorio">
                      <i class="fa fa-fw fa-square-o"></i>
                      Relatorio
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="line line-dashed line-lg pull-in"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Observação</label>
            <div class="col-sm-8">
              <input type="text" id="observacao" value="{{ previlegio.obs }}" class="form-control" placeholder="">
            </div>
          </div>
        
      </div>
      <div class="panel-footer">
        <div class="form-group" style="margin: 0">
          {{!-- <div class="col-sm-4 col-sm-offset-2"> --}}
            <button class="btn btn-default col-sm-offset-2">Cancelar</button>
            <button id="btnEdit" class="btn btn-primary ">Actualizar</button>
          {{!-- </div> --}}
        </div>
        </form>
      </div>
    </section>

  </section>
</section>

<script src="../js/jquery.min.js"></script>
<script src="../js/app/previlegios/script.js"></script>