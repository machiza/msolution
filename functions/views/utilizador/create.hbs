<section class="vbox">
  <section class="scrollable padder">
    <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
      <li><a href="/admin"><i class="fa fa-home"></i> Home</a></li>
      <li><a href="#">Definições</a></li>
      <li><a href="/utilizador">Utilizador</a></li>
      <li><a class="active">Adicionar</a></li>
    </ul>

        <form data-validate="parsley">
          <section class="panel panel-default">
            <header class="panel-heading">
              <span class="h4">Register</span>
            </header>
            <div class="panel-body">
              <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
              <p class="text-muted">Please fill the information to continue</p>
              <div class="form-group">
                <label>Utilizador</label>
                <input type="text" class="form-control" data-required="true" id="utilizador">                        
              </div>
              <div class="form-group">
                <label>Email</label>
                <input type="text" id="email" class="form-control" data-type="email" data-required="true">                        
              </div>
              <div class="form-group pull-in clearfix">
                <div class="col-sm-6">
                  <label>Digite password</label>
                  <input type="password" class="form-control" data-required="true" id="pwd">   
                </div>
                <div class="col-sm-6">
                  <label>Confirme password</label>
                  <input type="password" class="form-control" data-equalto="#pwd" data-required="true">      
                </div>   
              </div>
              <div class="form-group">
                <label>Nivel de Acesso</label>
                <select id="prev" data-required="true" class="form-control m-t">
                    <option value="">Por favor Selecione</option>
                {{#each previlegios }}
                    <option value="{{ id }}">{{ nome }}</option>
                {{/each}}
                </select>
              </div>
              <label class="control-label">Foto</label>
              <input type="hidden" id="photo">
              <div class="form-group">                
                <input type="file" value="upload" id="fileButton" class="filestyle" data-icon="false" data-classButton="btn btn-default" data-classInput="form-control inline input-s"/>
                <progress value="0" max="100" id="uploader" style="-webkit-appearance: none; appearance: none; width: 58%">0%</progress>
              </div>
              </div>
              </div>
            </div>
            <footer class="panel-footer text-right bg-light lter">
              <button id="btnSalvar" class="btn btn-success btn-s-xs">Salvar</button>
            </footer>
          </section>
        </form>

  </section>
</section>

<script src="../js/jquery.min.js"></script>
<script src="../js/app/utilizador/script.js"></script>